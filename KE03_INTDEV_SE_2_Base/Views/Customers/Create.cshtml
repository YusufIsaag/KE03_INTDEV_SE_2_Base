@model DataAccessLayer.Models.Customer

@{
    ViewData["Title"] = "Nieuwe klant";
}

<h1>Nieuwe klant</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <input asp-for="Active" class="form-check-input" />
                <label asp-for="Active" class="form-check-label"></label>
            </div>
            <div class="form-group mb-3">
                <label for="PhotoFile" class="form-label">Profielfoto</label>
                <input type="file" name="PhotoFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
