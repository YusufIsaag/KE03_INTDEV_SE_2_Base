@model IEnumerable<DataAccessLayer.Models.Customer>

@{
    ViewData["Title"] = "Klanten";
}

<h1>Klanten</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nieuwe klant toevoegen</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Naam</th>
            <th>Adres</th>
            <th>Actief</th>
            <th>Foto</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@(item.Active ? "Ja" : "Nee")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Photo))
                    {
                        <img src="@item.Photo" style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Bewerken</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>
