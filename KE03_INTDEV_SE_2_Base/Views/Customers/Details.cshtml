@model DataAccessLayer.Models.Customer

@{
    ViewData["Title"] = "Details klant";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Naam</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Actief</dt>
        <dd class="col-sm-10">@(Model.Active ? "Ja" : "Nee")</dd>

        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <dt class="col-sm-2">Foto</dt>
            <dd class="col-sm-10">
                <img src="@Model.Photo" style="max-width:200px;" />
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Bewerken</a>
    <a asp-action="Index" class="btn btn-secondary">Terug naar lijst</a>
</div>
