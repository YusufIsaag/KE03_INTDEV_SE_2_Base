@model DataAccessLayer.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="row g-0">
            <div class="col-md-5">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded-start" />
                }
                else
                {
                    <div class="text-center p-4">
                        <p class="text-muted">No image available</p>
                    </div>
                }
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <p class="text-muted">@Model.Description</p>
                    <p><strong>Price:</strong> @Model.Price.ToString("C", new System.Globalization.CultureInfo("nl-NL")).Replace(",00", ",-")</p>


                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Return</a>
                </div>
            </div>
        </div>
    </div>
</div>
