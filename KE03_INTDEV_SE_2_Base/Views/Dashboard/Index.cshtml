@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<div style="display: flex; gap: 20px; flex-wrap: wrap;">
    <div style="padding: 20px; background: #f5f5f5; border-radius: 10px;">
        <h3>Totaal klanten</h3>
        <p style="font-size: 24px;">@ViewBag.TotalCustomers</p>
    </div>

    <div style="padding: 20px; background: #f5f5f5; border-radius: 10px;">
        <h3>Totaal producten</h3>
        <p style="font-size: 24px;">@ViewBag.TotalProducts</p>
    </div>

    <div style="padding: 20px; background: #f5f5f5; border-radius: 10px;">
        <h3>Totaal orders</h3>
        <p style="font-size: 24px;">@ViewBag.TotalOrders</p>
    </div>
</div>
